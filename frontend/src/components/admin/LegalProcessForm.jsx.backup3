                {editingStep !== null ? " AdÄ±mÄ± GÃ¼ncelle" : " AdÄ±m Ekle"}
              </Button>
              {editingStep !== null && (
                <Button onClick={cancelEditStep} variant="outline" className="w-full mt-2 text-gray-600">
                  <X className="h-4 w-4" />
